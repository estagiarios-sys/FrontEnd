{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "strict": true,
      "jsx": "react",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./src", // Este valor garante que os imports sejam resolvidos a partir da pasta src
      "paths": {
        "*": ["*"]
      }
    },
    "include": ["src"]
  }
  